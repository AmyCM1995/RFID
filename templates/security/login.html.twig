{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                        {#{% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                             </div>
                         {% endif %} #}


                <div class="card">
                    <div class="card-body bg-white">
                        <div class="container ml-5">
                            <img src="{{ asset('img/logo_cmc2-1+nb.png') }}" alt="CORREOS DE CUBA"style="width: 80%">
                        </div>


                        <h1 class="h3 mb-3 font-weight-normal text-center" style="color: #004085;">
                            Iniciar sesión
                        </h1>
                        <div class="form-group">
                            <label for="inputNombre" class="sr-only">Nombre</label>
                            <input type="text" value="{{ last_username }}" name="nombre" id="inputNombre" class="form-control" placeholder="Nombre" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="sr-only">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Contraseña" required>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                        #}


                        <button class="btn bg-light" style="color: #004085; font-weight: bold" type="submit">
                            Aceptar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
