{% extends 'baseReportes.html.twig' %}
{% block reporte %}
    <h1>Fechas en que no se brinda el servicio de Correspondencia Ordinaria en Cuba</h1>

    <style type="text/css">
        table, th, td {
            border-collapse: collapse;
            border: 1px solid gray;
        }
    </style>

    <table class="table">
        <thead>
        <tr>
            <th style="width: 100px">Fecha</th>
            <th style="width: 60px; text-align: center" >Anual</th>
            <th style="width: 275px;">Descripción</th>
            <th style="width: 275px;">Provincias afectadas</th>
        </tr>
        </thead>
        <tbody>
        {% for fechas_no_correspondencium in fechas_no_correspondencias %}
            <tr>
                {% if fechas_no_correspondencium.fechaFin != null %}
                    <td style="width: 100px">{{ fechas_no_correspondencium.fechaInicio ? fechas_no_correspondencium.fechaInicio|date('d-m-Y') : '' }}
                        al {{ fechas_no_correspondencium.fechaFin ? fechas_no_correspondencium.fechaFin|date('d-m-Y') : ''  }}</td>
                {% else %}
                    <td style="width: 90px">{{ fechas_no_correspondencium.fechaInicio ? fechas_no_correspondencium.fechaInicio|date('d-m-Y') : '' }}</td>
                {% endif %}
                <td style="width: 60px; text-align: center">{{ fechas_no_correspondencium.esAnual ? 'Sí' : 'No' }}</td>
                <td style="width: 275px;">{{ fechas_no_correspondencium.descripcion }}</td>
                <td style="width: 275px;">
                    {% for provincia in fechas_no_correspondencium.provincia %}
                        {{ provincia.nombre }}
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
