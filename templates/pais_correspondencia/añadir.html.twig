{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block contenido %}
    {{ parent() }}
<h1>Añadir países de Correspondencia</h1>

<table class="table">
    <thead>
    <tr>
        <th>Código</th>
        <th>Nombre</th>
        <th>Región</th>
    </tr>
    </thead>
    <tbody>
    {% for pais_correspondencium in pais_correspondencias %}
        {% if  pais_correspondencium.esActivo == false %}
            <tr>
                {#<td>{{ pais_correspondencium.id }}</td>#}
                <td>{{ pais_correspondencium.codigo }}</td>
                <td>{{ pais_correspondencium.nombre }}</td>
                {% if pais_correspondencium.region != null %}
                    <td>{{pais_correspondencium.region.descripcion}}</td>
                {% endif %}
                <td>
                    <a href="{{ path('pais_correspondencia_activar', {'id': pais_correspondencium.id}) }}">Añadir</a>
                    <a href="{{ path('pais_correspondencia_edit', {'id': pais_correspondencium.id}) }}">Editar</a>
                </td>
            </tr>
        {% endif %}
    {% else %}
        <tr>
            <td colspan="5">No hay países que añadir</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    {% if is_granted('ROLE_ESPECIALISTA_DC') %}
        <button class="btn bg-primary" id="corresponsal-btns">
            <a href="{{ path('pais_correspondencia_new') }}">Nuevo</a>
        </button>
        {#<button class="btn bg-primary" id="corresponsal-btns">
            <a href="#">Acciones</a>
        </button>#}
    {% endif %}
{% endblock %}