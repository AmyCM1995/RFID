{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}
{% block style %}
    .content { overflow-x: hidden; width: 100%; font: 12px/1.5 sans-serif; }
    .content code { background: #F5F5F5; padding-top: 5px; padding-bottom: 80px; }
{% endblock %}

{% block contenido %}
    {{ parent() }}

    <br>
    <div class="content" align="center">
        <h1>Bienvenid@</h1>

        {#***************************PI***********************************#}
        {% if ultimoPI > 29 %}
        <p class="alert alert-danger alert-dismissible text-justify">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            El tiempo del plan de imposición actual se ha vencido. Importe un nuevo plan de imposición.
        </p>
        {% elseif ultimoPI > 26 %}
        <p class="alert alert-warning alert-dismissible text-justify">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            Hace {{ ultimoPI }} días importó el último plan de imposición. Debería de realizar una nueva importación.
        </p>
        {% endif %}
        {#***************************LecturasCSV***********************************#}
        {% if ultimaLecturaCSV > 29 %}
            <p class="alert alert-danger alert-dismissible text-justify">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                El tiempo del plan de las lecturas importadas de la UPU se ha vencido. Importe el nuevo fichero con las lecturas.
            </p>
        {% elseif ultimaLecturaCSV > 26 %}
            <p class="alert alert-warning alert-dismissible text-justify">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                Hace {{ ultimaLecturaCSV }} días importó el fichero con las últimas lecturas de la UPU. Debería de realizar una nueva importación.
            </p>
        {% endif %}



        <table class="table-info">
            <thead>
                <tr>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
    <br>

{% endblock %}